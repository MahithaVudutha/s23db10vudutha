extends layout

block content
  h1= title
  - let item = results
  div(class="container-fluid")
    div(class="row m-1")
      each item in results
        - let destination1 = `dispatch("/zebra/update?id=${item._id}")`
        - let destination2 = `dispatch("/zebra/create")`
        - let destination3 = `dispatch("/zebra/detail?id=${item._id}")`
        - let destination4 = `dispatch("/zebra/delete?id=${item._id}")`
        div(class="row-sm-2 m-1") 
          | zebra color: #{item.zebra_color}, 
          | zebra breed: #{item.zebra_breed}, 
          | zebra price: #{item.zebra_price}
          //- button.btn(class="btn-primary ml-1", onclick= destination2) Create 
        button.btn(class="btn-primary ml-1", onclick= destination1) Update 
          //- button.btn(class="btn-primary ml-1", onclick= destination3) Detail
          //- button.btn(class="btn-primary ml-1", onclick= destination4) Delete

  script.
    function dispatch(path) {
      window.location.href = path;
    }